{% extends 'base.html.twig' %}

{% block title %} Liste des Articles{% endblock %}

{% block body %}
    <h1 class="mb-4">Liste des Articles</h1>

    {% if articles %}
        <table id="articles" class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nom</th>
                    <th>Prix (€)</th>
                    <th style="width: 25%;">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.nom }}</td>
                        <td>{{ article.prix }}</td>
                        
                        <td>
                            {# Détails #}
                            <a href="{{ path('article_show', {id: article.id}) }}" class="btn btn-outline-dark btn-sm me-2">Détails</a>
                            
                            {# Modifier #}
                            <a href="{{ path('edit_article', {id: article.id}) }}" class="btn btn-warning btn-sm me-2">Modifier</a>
                            
                           {# FORMULAIRE DE SUPPRESSION  #}
<form method="POST" action="{{ path('delete_article', {id: article.id}) }}" 
    style="display:inline-block;"
    onsubmit="return confirm('Êtes-vous sûr de supprimer cet article?');">
    
    {# CE CHAMP EST CRUCIAL pour que Symfony accepte la requête #}
    <input type="hidden" name="_method" value="DELETE"> 
    
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    
    <button class="btn btn-danger btn-sm">Supprimer</button>
</form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="alert alert-info">Aucun article n'a été trouvé.</p>
    {% endif %}

{% endblock %}